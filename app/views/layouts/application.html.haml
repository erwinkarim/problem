%html
	%head
		%title Problem?
		= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
		= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css'
		= csrf_meta_tags 
		%meta{ :name => 'viewport', :content => 'width=device-width, initial-scale=1' }
	%body
		.navbar.navbar-default
			.container-fluid
				.navbar-header
					%button.navbar-toggle.collapsed{ :type => 'button', :data => { :toggle => 'collapse', :target => '#root' } }
						%span.sr-only Toggle Navigation
						%span.icon-bar	
						%span.icon-bar	
						%span.icon-bar	
					%a.navbar-brand{ :href => root_path } Problem?
				.collapse.navbar-collapse#root
					%ul.nav.navbar-nav
						%li
							%form.navbar-form.navbar-left{ :role => 'search' }
								.form-group
									%input.form-control{ :placeholder => 'Search', :type => 'text' }
									%button.btn.btn-default{ :type => 'button' } Search
						%li
							%a{ :href => '#' } Ask
					%ul.nav.navbar-nav.pull-right
						- if user_signed_in? then
							%li
								%a.dropdown-list{ :href => '#', :role => 'menu', :'data-toggle' => 'dropdown' } 
									#{ current_user.name }
									%span.caret
								%ul.dropdown-menu
									%li
										%a{ :href => '#' } Settings
									%li.divider
									%li
										= link_to 'Logout', destroy_user_session_path, :method => :delete
						- else
							%li
								%a{ :href => new_user_session_path } Login

		.container
			= yield
		= javascript_include_tag 'application', 'data-turbolinks-track' => true 
		= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js'

